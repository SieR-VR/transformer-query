{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "resolveJsonModule": true,
        "plugins": [
            { "transform": "./src/transform.ts" },
        ]
    },
    "exclude": [
        "src/hyper",
        "lib"
    ]
}